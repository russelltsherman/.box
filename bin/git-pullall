#!/usr/bin/env bash
#
#
# Update all git directories below current directory or specified directory

usage() {
  echo "$@"
}

git_pullall() {
  find "${1:-$(pwd)}" -name .git -type d -prune -exec sh -c '
    cd $1/.. && echo "Updating $(pwd)" && git pull --rebase
  ' _ {} \;
}

# _git_pullall() {
#
# }

git_pullall "$@"
