#!/usr/bin/env bash

source $BOXROOTDIR/dotfiles/.lib_sh/functions.sh

usage() {
  echo "usage: box htop"
  echo
}

main() {
  local container_name="htop"
  del_stopped $container_namelocal
  docker run --rm -it \
  --pid host \
  --net none \
  --name $container_name \
  ${DOCKER_REPO_PREFIX}/htop
}

# _cmd_htop() {
# }

cmd_htop() {
  if [ "$#" -lt 1 ]; then # called with no parameters
    main; exit 0

  elif [ "$#" -eq 1 ]; then # called with 1 parameters
    if [[ $1 == "help" ]]; then
      usage; exit 0
    fi

    main $1; exit 0
  fi

  usage; exit 1
}

# cmd_htop "$@"
